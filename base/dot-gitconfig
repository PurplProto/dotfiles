[core]
  editor = code --wait
  autocrlf = input
[color]
  branch = auto
  diff = auto
  status = auto
  interactive = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow bold
  remote = cyan bold
[color "diff"]
  new = yellow bold
  old = red bold
  meta = cyan bold
  frag = white bold
  commit = white bold
[color "status"]
  added = yellow bold
  changed = cyan bold
  untracked = red bold
  branch = blue bold
[difftool]
  prompt = false
[mergetool]
  keepBackup = false
[pull]
  rebase = merges
[push]
  default = current
[alias]
  br = branch
  st = status
  co = checkout
  fp = fetch -p
  rod = rebase origin/develop
  stat = log --stat
  commits = log --all --graph --abbrev-commit --date=relative --pretty=format:'%C(bold blue)%h%Creset -%C(auto)%d%Creset %s %C(yellow)(%cr) %C(bold blue)<%an>%Creset'
  uncommit = reset --soft HEAD~1
  diffmaster = diff --stat --cached master
  distance = "!f() { git log --oneline master..HEAD | wc -l; }; echo \"ðŸ“Š `f` - Commits ahead\""
[gpg]
  program = gpg2
[init]
  defaultBranch = master
